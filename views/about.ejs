                    <input type="email" name="email" id="email" class="form-control py-2" placeholder="Enter Email Here" required></input>
                  </div>
                  <div class="col-md-5 ps-md-0">
                    <button type="submit" class="button_slide btn-block h-100 w-100">Join</button>
                  </div>
                </div>
              </div>
              <div id="outer" class="d-flex justify-content-center">
